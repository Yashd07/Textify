<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade"
    tools:context=".SplashscreenActivity">



    <ImageView
        android:id="@+id/AppLogo"
        android:layout_width="300dp"
        android:layout_height="270dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.268"
        app:srcCompat="@drawable/app_logo"
        android:contentDescription="Image of the app" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Textify"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/pink_shade_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AppLogo"
        app:layout_constraintVertical_bias="0.148"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/BottomText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developed by"
        android:textColor="@color/yellow"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appName"
        app:layout_constraintVertical_bias="0.438"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/BottomText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yash Desai"
        android:textColor="@color/yellow"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BottomText1"
        app:layout_constraintVertical_bias="0.192"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>